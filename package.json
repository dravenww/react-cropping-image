{
  "name": "react-screenshot",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dravenww/react-screenshot.git"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:amd && npm run build:es",
    "build:amd": "rm -rf dist && NODE_ENV=production babel src/lib/ --plugins @babel/plugin-transform-modules-amd --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "build:es": "rm -rf es && NODE_ENV=production babel src/lib/ --out-dir es --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/plugin-transform-modules-amd": "^7.12.13",
    "@babel/plugin-transform-modules-umd": "^7.12.13"
  }
}
